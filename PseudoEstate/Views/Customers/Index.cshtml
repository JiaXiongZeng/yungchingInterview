@model IEnumerable<PseudoEstate.Entities.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDtm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifyDtm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeleteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeleteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeleteDtm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDtm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifyDtm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeleteId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeleteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeleteDtm)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
